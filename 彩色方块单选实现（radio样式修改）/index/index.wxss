/*背景小方块*/
.radio {
  padding: 10px;
  width:35rpx;height:8rpx;
  margin-left:20rpx;
  border-radius:10rpx;
  margin-top:100rpx;
}

/*未选中时背景样式透明*/
radio .wx-radio-input{
  background:transparent;
  border-color:transparent;
}

/*选中时对勾样式*/
radio .wx-radio-input.wx-radio-input-checked::before{
  content: '\00a0';
  border: 5rpx solid #fff;
  border-top-width: 0;
  border-right-width: 0; 
  width: 20rpx;
  height: 10rpx;
  position:absolute;
  transform: rotate(-45deg);
  top:-12rpx;
  left:7rpx;
}