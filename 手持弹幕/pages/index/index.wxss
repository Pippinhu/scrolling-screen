.bulletScreen{
  border-radius:15rpx;
  margin-left:20px;
  margin-right:20px;
  padding:30rpx;
  height:300rpx;
  display:flex;
  justify-content: center;
  align-items: center; 
}

.text{
  position:absolute; 
  text-align:center;
  align-content:center;
  left:30rpx;
  white-space:nowrap;
}

.controlPanel{
  box-shadow:0px 3rpx 40rpx #E0E0E0;
  margin-left:20px;
  margin-right:20px;
  margin-top:40rpx;
  display:flex;
  flex-direction:row;
  padding:30rpx;
}

.onLeft{
  display:flex;
  flex-direction:column;
}

.leftUp{
  display:flex;
  flex-direction:row;
}

.input{
  background-color:#FFFFFF;
  font-size:30rpx;
  margin-left:20rpx;
}

.leftdown{
  margin-top:70rpx;
  display:flex;
  flex-direction:row;
}

.speedControl{
 display:flex;
 flex-direction: column;
}

.onRight{
  flex:1
}

.radio-speed radio{
  opacity: 0;
  /* position: absolute; */
}
.radio-icon{
  display: inline-block;
  width:20rpx;
  height:20rpx;
  border-radius:50%;
  border:5rpx solid #C8C9CA;
  margin-right:-40rpx;
}

.radio-group{
  margin-left:40rpx;
}

.radio-speed.active .radio-icon{
   border-color: #838B9B;
   /* border-width:3rpx; */
   background-color: #30394B
}

.radio-speed .tag{
  color:#D2D3D4;
  line-height:2;
  font-size:35rpx;
}

.radio-speed.active .tag{
  color:#000000;
}
.choice{
  margin-top:-100rpx;
}
/*背景小方块*/
.radio-color {
  padding: 10px;
  width:16rpx;height:1rpx;
  margin-left:20rpx;
  border-radius:10rpx;
  margin-top:100rpx;
}

/*未选中时背景样式透明*/
radio .wx-radio-input{
  background:transparent;
  border-color:transparent;
}

/*选中时对勾样式*/
radio .wx-radio-input.wx-radio-input-checked::before{
  content: '\00a0';
  border: 5rpx solid #fff;
  border-top-width: 0;
  border-right-width: 0; 
  width: 18rpx;
  height: 10rpx;
  position:absolute;
  transform: rotate(-45deg);
  top:-15rpx;
  left:-5rpx;
}
